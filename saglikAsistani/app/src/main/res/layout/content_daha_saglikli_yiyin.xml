<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.muslu.saglikasistani.dahaSaglikliYiyin"
    tools:showIn="@layout/activity_daha_saglikli_yiyin"
    android:background="@drawable/background"
    >

    <TextView
        android:text="Günlük Toplam Kalori:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView12"
        android:textStyle="normal|bold"
        android:textColor="@color/Black"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:text="kalori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_daha_saglikli_yiyin_texVi"
        android:textStyle="normal|bold"
        android:textColor="@color/Black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <FrameLayout
        android:layout_width="117dp"
        android:layout_height="155dp"
        android:layout_gravity="left|center_vertical"
        android:id="@+id/Satistirma_id"
        android:onClick="Tiklandi7"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="RtlHardcoded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Yemek Ekleme"
            android:id="@+id/textView51"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="@color/Black"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView33"
            android:layout_gravity="center"
            android:background="@drawable/sabah_atistirma"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/activity_daha_saglikli_yiyin_texVi"
        android:layout_marginEnd="13dp"
        android:id="@+id/ideal_kilo_id"
        tools:ignore="HardcodedText"
        android:textSize="18sp"
        android:textColor="@color/Red"
        android:textStyle="normal|bold" />

    <TextView
        android:text="İdeal Kilonuz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:id="@+id/textView6"
        android:textStyle="normal|bold|italic"
        android:textSize="18sp"
        android:textColor="@color/MediumBlue"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/Satistirma_id"
        android:layout_alignParentStart="true" />

    <Button
        android:text="İdeal Kilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ideal_kilo_id"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/btnIdeal_id"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="@color/Green" />
</RelativeLayout>
