<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muslu.saglikasistani.giris">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="InefficientWeight,UselessParent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/menukullanici"
            android:layout_marginStart="26dp"
            android:id="@+id/imageView26"
            android:layout_alignTop="@+id/activity_giris_ad_editText"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription" />

        <Button
            android:text="Kayıt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_kayit_button"
            tools:ignore="HardcodedText"
            style="@style/Widget.AppCompat.Button"
            android:layout_alignBaseline="@+id/activity_giris_button"
            android:layout_alignBottom="@+id/activity_giris_button"
            android:layout_toEndOf="@+id/activity_giris_button" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Kullanıcı adını giriniz"
            android:ems="10"
            android:layout_marginTop="185dp"
            android:id="@+id/activity_giris_ad_editText"
            tools:ignore="HardcodedText"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView26" />

        <Button
            android:text="Giriş"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_giris_button"
            tools:ignore="HardcodedText"
            style="@style/Widget.AppCompat.Button"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView26" />


    </RelativeLayout>
</LinearLayout>