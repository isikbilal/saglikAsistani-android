<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.muslu.saglikasistani.SabahAtistirma"
    tools:showIn="@layout/activity_sabah_atistirma"
    android:background="@drawable/background">

    <RelativeLayout tools:context="com.bgnsoftware.saglik_uygulamasi.yemekEklemeYeri"
        tools:showIn="@layout/activity_yemek_ekle"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yiyecekler"
            android:id="@+id/textView44"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_yemek_liste_spinner"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/activity_sabah_atistirma_kalori_editText"
            android:layout_alignStart="@+id/activity_sabah_atistirma_kalori_editText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/activity_sabah_atistirma_kalori_editText"
            android:layout_alignBaseline="@+id/textView45"
            android:layout_alignBottom="@+id/textView45"
            android:layout_toRightOf="@+id/textView45"
            android:layout_toEndOf="@+id/textView45" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ä°ptal"
            android:id="@+id/SAIptal_id"
            android:textStyle="bold"
            android:textColor="@color/Chartreuse"
            android:background="@color/Azure"
            android:onClick="Tiklandi9"
            android:layout_below="@+id/activity_sabah_atistirma_kalori_editText"
            android:layout_alignLeft="@+id/activity_sabah_atistirma_kalori_editText"
            android:layout_alignStart="@+id/activity_sabah_atistirma_kalori_editText"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="43dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaydet"
            android:id="@+id/activity_sabah_atistirma_kaydet"
            android:background="@color/Azure"
            android:textColor="@color/Chartreuse"
            android:layout_alignBaseline="@+id/SAIptal_id"
            android:layout_alignBottom="@+id/SAIptal_id"
            android:layout_alignRight="@+id/activity_sabah_atistirma_kalori_editText"
            android:layout_alignEnd="@+id/activity_sabah_atistirma_kalori_editText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalori (Kcal)"
            android:id="@+id/textView45"
            android:layout_marginTop="48dp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:layout_below="@+id/activity_yemek_liste_spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Yeni Yiyecek Ekle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/activity_yemek_ekle"
            android:onClick="Tiklandi9"
            android:layout_below="@+id/activity_sabah_atistirma_kaydet"
            android:layout_alignLeft="@+id/activity_sabah_atistirma_kaydet"
            android:layout_alignStart="@+id/activity_sabah_atistirma_kaydet" />
    </RelativeLayout>
</RelativeLayout>